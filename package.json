{
  "name": "@elmijo/monorepo-helper",
  "version": "1.0.0",
  "description": "This package lets you create a Monorepo Typescript Jest configuration easily",
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElMijo/monorepo-helper.git"
  },
  "author": "Jerry Anselmi <jerry.anselmi@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "monorepo",
    "jest",
    "helper"
  ],
  "homepage": "https://elmijo.github.io/monorepo-helper/",
  "bugs": {
    "url": "https://github.com/ElMijo/monorepo-helper/issues"
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "test": "jest --testPathPattern __tests__/unit",
    "test:integration": "jest --testPathPattern __tests__/integration",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "docs": "rimraf ./.docs && typedoc",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "*",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "codecov": "^3.8.3",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "jest": "^27.2.2",
    "jsdoc-plugin-typescript": "^2.0.6",
    "lint-staged": "^12.1.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.10",
    "typescript": "^4.4.3",
    "typescript-eslint": "^0.0.1-alpha.0",
    "uuid": "^8.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,json,yml}": [
      "eslint .",
      "prettier --check ."
    ]
  }
}
