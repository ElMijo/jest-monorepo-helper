{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./lib/types",
    "sourceMap": true,
    "outDir": "./lib",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "strictNullChecks": false
  },
  "exclude": [
    "**/lib/**/*",
    "node_modules",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/__fixtures__/**/*",
    "**/**/*.config.ts",
    "**/**/*.setup.ts"
  ]
}
